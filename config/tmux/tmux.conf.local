# -- clipboard -----------------------------------------------------------------

tmux_conf_copy_to_os_clipboard=true


# -- user customizations -------------------------------------------------------

# start with mouse mode enabled
set -g mouse on

# force Vi mode
#   really you should export VISUAL or EDITOR environment variable, see manual
set -g status-keys vi
set -g mode-keys vi

# replace C-b by C-s instead of using both prefixes
set -gu prefix2
unbind C-s
unbind C-b
set -g prefix C-s
bind C-s send-prefix
bind p send-keys clear\; send-keys 'Enter'

unbind s
unbind v
bind s split-window -v
bind v split-window -h

bind -n C-S-h swap-pane -d -t '{left-of}'
bind -n C-S-l swap-pane -d -t '{right-of}'
bind -n C-S-k swap-pane -d -t '{up-of}'
bind -n C-S-j swap-pane -d -t '{down-of}'

# move status line to top
set -g status-position bottom

bind-key "g" split-window -fZ -c "#{pane_current_path}" "gitui" 
bind-key "D" split-window -fZ -c "#{pane_current_path}" "lazydocker" 

